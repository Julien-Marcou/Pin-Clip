{

  "manifest_version": 2,
  "name": "Pin&Clip",
  "description": "Pin anything you want",
  "version": "1.0",
  "default_locale": "en",
  "applications": {
    "gecko": {
      "strict_min_version": "58"
    }
  },

  "browser_action": {
    "default_icon": "icons/flag-32.png",
    "default_title": "Pin&Clip",
    "default_popup": "popup/pin-clip.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_scripts/pin.js"]
    }
  ],

  "permissions": [
    "menus",
    "activeTab"
  ],

  "icons": {
    "16": "icons/flag-16.png",
    "32": "icons/flag-32.png",
    "48": "icons/flag-48.png",
    "96": "icons/flag-96.png"
  }

}
